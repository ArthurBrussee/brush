{
  "name": "brush-nextjs-demo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build:wasm-release": "cd ../crates/brush-wasm && wasm-pack build --release --target bundler --out-dir pkg",
    "build:wasm": "cd ../crates/brush-wasm && wasm-pack build --dev --target bundler --out-dir pkg",
    "copy:wasm": "cp -r ../crates/brush-wasm/pkg/* ./pkg/",
    "dev": "npm run build:wasm && npm run copy:wasm && next dev --turbopack",
    "build": "npm run build:wasm-release && npm run copy:wasm && next build --turbopack"
  },
  "dependencies": {
    "next": "^15.1.0",
    "react": "^19",
    "react-dom": "^19"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^8",
    "eslint-config-next": "^15.1.0",
    "typescript": "^5"
  }
}
